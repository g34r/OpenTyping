<UserControl x:Class="OpenTyping.HomeMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:OpenTyping"
             mc:Ignorable="d"
             d:DesignHeight="500" 
             d:DesignWidth="800">
    <UserControl.Resources>
        <local:KeyPosToKeyConverter x:Key="KeyPosToKeyDataConverter"/>
        <Style x:Key="StatTile" TargetType="mah:Tile">
            <Setter Property="TitleFontSize" Value="13"/>
            <Setter Property="FontFamily" Value="{StaticResource NanumGothic}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="0 0 7 0"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="15 5 15 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="5 10 0 15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Row="0"
                   Grid.Column="0"
                   Grid.RowSpan="2"
                   Source="{StaticResource AppLogo}"
                   Height="85"
                   Margin="0 0 13 0"/>
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Name="MenuName"
                       Text="열린타자"
                       Style="{StaticResource NormalTextBlock}" 
                       FontWeight="Light" 
                       FontSize="42pt"/>
            <TextBlock Grid.Row="1" 
                       Grid.Column="1"
                       Name="MenuDesc"
                       Text=": 현대적인 오픈 소스 타자 연습 프로그램"
                       Style="{StaticResource NormalTextBlock}"
                       FontSize="15pt"/>
        </Grid>

        <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="#ced4da"
                Background="#f1f3f5"
                CornerRadius="5"
                Margin="20 10 20 20">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <mah:Tile Style="{StaticResource StatTile}"
                          Name="Tile1"
                          Title="가장 많이 틀린 키"
                          Background="#f03e3e" HorizontalTitleAlignment="Center">
                    <local:KeyBox x:Name="MostIncorrectKey"
                                  Key="{Binding Path=Stats.MostIncorrect.Key, 
                                                Source={x:Static local:MainWindow.CurrentKeyLayout},
                                                Converter={StaticResource KeyPosToKeyDataConverter}}"
                                  Foreground="Black"
                                  Width="50"
                                  Margin="0 0 0 60"/>
                </mah:Tile>
                <mah:Tile Style="{StaticResource StatTile}"
                          Name="Tile2"
                          Title="평균 타속"
                          Background="#1c7ed6" HorizontalTitleAlignment="Center">
                    <TextBlock x:Name="AverageTypingSpeed"
                               Text="{Binding Path=Stats.AverageTypingSpeed,
                                              Source={x:Static local:MainWindow.CurrentKeyLayout}}"
                               FontFamily="{StaticResource NanumBarunGothic}"
                               FontSize="30pt"
                               Foreground="White"/>
                </mah:Tile>
                <mah:Tile Style="{StaticResource StatTile}"
                          Name="Tile3"
                          Title="평균 정확도"
                          Background="#37b24d" HorizontalTitleAlignment="Center">
                    <TextBlock x:Name="AverageAccuracy"
                               Text="{Binding Path=Stats.AverageAccuracy,
                                              Source={x:Static local:MainWindow.CurrentKeyLayout},
                                              StringFormat={}{0}%}"
                               FontFamily="{StaticResource NanumBarunGothic}"
                               FontSize="30pt"
                               Foreground="White"/>
                </mah:Tile>
                <mah:Tile Style="{StaticResource StatTile}"
                          Name="Tile4"
                          Title="연습한 문장 수"
                          Background="#f76707" HorizontalTitleAlignment="Center">
                    <TextBlock x:Name="SentencePracticeCount"
                               Text="{Binding Path=Stats.SentencePracticeCount,
                                              Source={x:Static local:MainWindow.CurrentKeyLayout}}"
                               FontFamily="{StaticResource NanumBarunGothic}"
                               FontSize="30pt"
                               Foreground="White"/>
                </mah:Tile>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Border Background="#4263eb"
                    CornerRadius="5"
                    HorizontalAlignment="Left"
                    Margin="3 0 0 0"
                    Padding="5">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Style="{StaticResource TabItemIconRectangle}" 
                               Width="35" 
                               Height="22"
                               Fill="White"
                               VerticalAlignment="Center">
                    <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Uniform" 
                                         Visual="{iconPacks:FontAwesome KeyboardSolid}"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock x:Name="CurrentKeyLayoutName"
                               Text="{Binding Path=Name,
                                              Source={x:Static local:MainWindow.CurrentKeyLayout}}"
                               Foreground="White"
                               FontFamily="{StaticResource NanumBarunGothic}"
                               FontSize="14pt"
                               Margin="5 0 0 0"
                               VerticalAlignment="Center"/>

                </StackPanel>
            </Border>
            <Border Background="#37b24d"
                    CornerRadius="5"
                    HorizontalAlignment="Left"
                    Margin="7 0 0 0"
                    Padding="5">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Style="{StaticResource TabItemIconRectangle}" 
                               Width="47" 
                               Height="22"
                               Fill="White"
                               VerticalAlignment="Center">
                    <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Uniform" 
                                         Visual="{iconPacks:FontAwesome LanguageSolid}"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock x:Name="CurrentKeyLayoutChar"
                               Text="{Binding Path=Character,
                                              Source={x:Static local:MainWindow.CurrentKeyLayout}}"
                               Foreground="White"
                               FontFamily="{StaticResource NanumBarunGothic}"
                               FontSize="14pt"
                               Margin="5 0 0 0"
                               VerticalAlignment="Center"/>

                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>